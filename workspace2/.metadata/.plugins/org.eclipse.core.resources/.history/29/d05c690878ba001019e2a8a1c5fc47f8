#include "conf.h"

void confRCC(void){

    RCC->AHB1ENR |= (1<<0); // GPIOA
    RCC->APB2ENR |=(1<<17);//ENCENDEMOS USART2
}
void confGPIO(void){
	GPIOA->MODER |= (2<<(2*2)|2<<(2*3));//ALTERNATE FUNCTION DEL PA5,PA6 Y PA7
	GPIOA->AFR[0]|=(7<<(4*2)|7<<(4*3));//PARTE BAJA DEL AFR Y PONEMOS EL AF5 DEL SPI
}


void confUSART(void){

	SPI1->CR1 |=(3<<3);//seleccionamos un baudrate a frec de reloj de 1mhz
	SPI1->CR1 |=(1<<2);//activamos modo maestro
	SPI1->CR1 |=(1<<9);//ACTIVAMOS SS POR SOFTWARE SSM
	SPI1->CR1 |=(1<<8);//ACTIVAMOS EL SS INTERNO PARA FORZAR UNNA HABILITACIÃ“N EN EL MAESTRO SSI
	SPI1->CR1 |=(1<<6);//PRENDEMOS EL SPI
}

void config(void){
    confRCC();
    confGPIO();
    confSPI();
}
