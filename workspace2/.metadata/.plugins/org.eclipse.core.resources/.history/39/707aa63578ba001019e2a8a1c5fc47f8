#include "conf.h"

void confRCC(void){

    RCC->AHB1ENR |= (1<<0); // GPIOA
    RCC->APB2ENR |=(1<<17);//ENCENDEMOS USART2
}
void confGPIO(void){
	/*                 PA2TX PA3RX*/
	GPIOA->MODER |= (2<<(2*2)|2<<(2*3));//ALTERNATE FUNCTION DEL PA2 y PA3
	GPIOA->AFR[0]|=(7<<(4*2)|7<<(4*3));//PARTE BAJA DEL AFR Y PONEMOS EL AF7 DEL USART
}


void confUSART(void){

	USART2->|=();
}

void config(void){
    confRCC();
    confGPIO();
    confSPI();
}
